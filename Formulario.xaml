<Page x:Class="WPF_APP.Formulario"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_APP"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Formulario">

    <StackPanel HorizontalAlignment="Left" Width="400">
        <Label Content="Registro de profesores" FontSize="25" ></Label>
        <Label Content="Nombre del profesor" FontSize="22" ></Label>
        <TextBox Name="txtNombre"></TextBox>
        <Label Content="Apellidos del profesor" FontSize="22"></Label>
        <TextBox Name="txtApellidos"></TextBox>
        <Label Content="Numero de empleados" FontSize="22"></Label>
        <TextBox Name="txtNumEmpleados"></TextBox>
        <Label Content="Especialización" FontSize="22"></Label>
        <TextBox Name="txtEspecialización"></TextBox>
        <Button Content="Guardar cambios" Click="Guardar"></Button>

    </StackPanel>
</Page>
